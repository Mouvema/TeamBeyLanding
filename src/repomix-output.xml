    text-align: center;
    background-color: var(--teambey-card-bg); /* Give it a distinct background */
    border-top: 1px solid var(--teambey-divider-color);
    border-bottom: 1px solid var(--teambey-divider-color);
}

.cta-content h2 {
    font-size: clamp(2.2rem, 5vw, 3rem);
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--teambey-text-light);
}

.cta-content p {
    margin-bottom: 2.5rem;
    font-size: 1.15rem;
    color: var(--teambey-text-secondary);
    max-width: 650px;
    margin-left: auto;
    margin-right: auto;
}

.cta-buttons {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
}

.cta-primary, .cta-secondary {
    padding: 1rem 2.5rem;
    border-radius: var(--teambey-radius-pill);
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 1rem;
}

.cta-primary {
    background: linear-gradient(90deg, var(--teambey-primary), var(--teambey-accent));
    color: var(--teambey-text-light);
    border: none;
}

.cta-primary:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 8px 20px rgba(var(--teambey-primary-rgb),0.3);
}

/* --- Footer --- */

footer {
    background-color: #000000;
    color: var(--teambey-text-secondary);
    padding: 5rem 0 2rem;
}

.footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 3rem;
    margin-bottom: 4rem;
}

.footer-brand {
    grid-column: 1 / -1;
    margin-bottom: 1rem;
    @media (min-width: 768px) {
        grid-column: span 2;
    }
}

.footer-brand .logo {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: var(--teambey-text-light);
}

.footer-brand p {
    color: var(--teambey-text-secondary);
    max-width: 400px;
    line-height: 1.7;
}

.footer-links h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--teambey-text-light);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.footer-links ul {
    list-style: none;
    padding: 0;
}

.footer-links ul li {
    margin-bottom: 0.85rem;
}

.footer-links ul li a {
    color: var(--teambey-text-secondary);
    text-decoration: none;
    transition: color 0.2s ease, padding-left 0.2s ease;
}

.footer-links ul li a:hover {
    color: var(--teambey-primary);
    padding-left: 5px;
}

.footer-bottom {
    padding-top: 3rem;
    border-top: 1px solid var(--teambey-divider-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.5rem;
}

.social-links {
    display: flex;
    gap: 1.25rem;
}

.social-link {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(var(--teambey-text-light-rgb), 0.05);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--teambey-text-secondary);
    transition: all 0.3s ease;
    text-decoration: none;
    font-size: 1.1rem;
}

.social-link:hover {
    background-color: var(--teambey-primary);
    color: var(--teambey-text-light);
    transform: translateY(-3px);
}


/* --- Responsive Adjustments --- */
@media (max-width: 768px) {
    .hero h1 {
        font-size: 2.2rem;
    }
    .hero p {
        font-size: 1rem;
    }
    .nav-links {
        display: none; // Assumes a mobile burger menu would be implemented
    }
    header nav .cta-button {
        padding: 0.6rem 1.5rem;
        font-size: 0.8rem;
    }
    .hero-buttons, .cta-buttons {
        flex-direction: column;
        gap: 1rem;
    }
    .footer-content {
        grid-template-columns: 1fr;
        text-align: center;
    }
    .footer-brand p {
        margin-left: auto;
        margin-right: auto;
    }
    .footer-bottom {
        flex-direction: column;
        text-align: center;
    }
}

/* --- Advantage Section (Testimonial Replacement) --- */

.advantage {
    padding: 6rem 0;
    position: relative;
    overflow: hidden;
    background-color: var(--teambey-bg-dark); // Or a slightly different shade
}

.advantage-table {
    max-width: 900px;
    margin: 0 auto;
    background: var(--glass-bg);
    backdrop-filter: blur(var(--blur-intensity));
    -webkit-backdrop-filter: blur(var(--blur-intensity));
    border-radius: var(--teambey-radius-lg);
    border: 1px solid var(--glass-border);
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    overflow: hidden;
    font-size: 1.05rem;
}

.advantage-header, .advantage-row {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    align-items: center;
    padding: 1rem 1.5rem;
    gap: 1rem;
    border-bottom: 1px solid var(--teambey-divider-color);

    @media (max-width: 768px) {
      grid-template-columns: 1fr;
      text-align: center;
    }
}

.advantage-header {
    background-color: rgba(var(--teambey-card-bg-rgb), 0.5);
    color: var(--teambey-text-light);
    font-weight: 600;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 1.25rem 1.5rem;
}

.advantage-row:last-child {
    border-bottom: none;
}

.advantage-row .feature-name {
    font-weight: 500;
    color: var(--teambey-text-primary);
    
    @media (max-width: 768px) {
      font-weight: 700;
      border-bottom: 1px dashed var(--teambey-divider-color);
      padding-bottom: 1rem;
      margin-bottom: 0.5rem;
    }
}

.advantage-row .status-traditional {
    color: var(--teambey-text-gray);

    @media (max-width: 768px) {
      margin-bottom: 0.5rem;
    }
}

.advantage-row .status-teambey {
    color: var(--teambey-accent);
    font-weight: 600;
}

.advantage-row .status-teambey::before, .advantage-row .status-traditional::before {
    margin-right: 0.5rem;
}
